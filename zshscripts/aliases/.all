#!/bin/bash

TMUXPT=$HOME/.config/zshscripts/aliases/.tmux
CARGOPT=$HOME/.config/zshscripts/aliases/.cargo
GITPT=$HOME/.config/zshscripts/aliases/.git

source $TMUXPT
source $CARGOPT
source $GITPT

alias cls='clear'
alias nv='node -v'
alias conf='code ~/.config/'
alias config='code ~/.zshrc'
alias cdc='cd ~/.config/'
alias reload='source ~/.zshrc'
alias gitconf='code ~/.gitconfig'
alias hla='exa --long --header --inode --git -a'
alias etra='exa -T --icons -a'
alias gi='go install'
alias gb='go build'
alias rmf="rm -rf"
alias bi="bundle install"
alias halp="bat ~/.config/zshscripts/aliases/.all $TMUXPT $CARGOPT $GITPT"
alias treload="pbcopy < ~/.config/zshscripts/templates/.tmux.conf && pbpaste > ~/.tmux.conf"
alias add="code ~/.config/zshscripts/aliases/.all"
alias copy="pbcopy <"
